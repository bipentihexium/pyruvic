[target]
	name: pyruvic
	type: executable
	macroname: PYRUVIC
	version: 0.1.0.0 null
	cfg-file: src/cfg.hpp

[requirements]
	c++ standard: c++20, c++17

[dependencies]
> project

> local

[options]

[commands]
> pre-build
	%if %changed cfg.l:
		flex++ src/cfg.l -o src/cfg_lex.hpp
	%if %changed projinfo.l:
		flex++ src/projinfo.l -o src/projinfo_lex.hpp
	%if %changed cfg.y:
		bison src/cfg.y -o src/cfg_par.hpp
	%if %changed projinfo.y:
		bison src/projinfo.y -o src/projinfo_par.hpp
